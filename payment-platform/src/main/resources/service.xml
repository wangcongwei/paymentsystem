<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:repository="http://www.springframework.org/schema/data/repository" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation=" 
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd ">

	<context:component-scan base-package="com.newtouch.demo.service" />
	<context:component-scan base-package="com.newtouch.payment.service" />

	<!-- 快钱支付加密解密-->
	<bean id="kuaiqianSignatureService"
		class="com.newtouch.payment.service.impl.KuaiqianSignatureServiceImpl"
		init-method="initKeyStore">
		<property name="ksfile" value="payment/onlinepayment/tester-rsa.pfx" />
		<property name="certfile" value="payment/onlinepayment/99bill.cert.rsa.20340630.cer" />
		<property name="ksLoadPass" value="123456" />
	</bean>
	
	<!-- 支付回调不同平台的服务容器 -->
	<bean id="payCallBackServiceContainer" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="KUAIQIAN" value-ref="kuaiqianPlatformPayCallBackService" />
			</map>
		</constructor-arg>
	</bean>
	<!-- 支付回调快钱不同支付方式的服务容器 -->
	<bean id="kuaiqianCallBackContainer" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry key="1" value-ref="kuaiqianGatewayPayCallBackService" />
				<entry key="5" value-ref="kuaiqianQuickPayPayCallBackService" />
			</map>
		</constructor-arg>
	</bean>
</beans>